{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="container" style="height: 600px;">
<div class="row">
     <div class="xs-margin"></div><!-- space -->
      <div class="xs-margin"></div><!-- space -->
    <div class="col-md-12">
        <header class="content-title">
            <h1 class="title">S'authentifier</h1>
        </header>
        <div class="xs-margin"></div><!-- space -->
        <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top: 50;">
{% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <div class="row">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <fieldset>
                    <h2 class="sub-title">Se connecter</h2>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="input-icon input-icon-user"></span><span class="input-text">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}&#42;</span></span>
                        <input type="text" class="form-control input-lg" id="username" name="_username" value="{{ last_username }}" required="required">
                    </div><!-- End .input-group -->
                    <div class="input-group">
                        <span class="input-group-addon"><span class="input-icon input-icon-password"></span><span class="input-text">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}&nbsp;&#42;&nbsp;&nbsp;&nbsp;</span></span>
                        <input type="password" id="password" name="_password" required="required" class="form-control input-lg" >
                    </div><!-- End .input-group -->
                        <span class="help-block text-right"><a href="{{path('fos_user_resetting_request')}}">Forgot your password?</a></span>
                        <div class="input-group custom-checkbox sm-margin top-10px">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /><span class="checbox-container">
											 	<i class="fa fa-check"></i>
											 </span>
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                        </div>
                     <div class="xs-margin"></div><!-- space -->

                    <input type="submit" id="_submit" class="btn btn-custom-2 btn-lg md-margin" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </fieldset>
            </div>
        </form>
        </div>
    </div>
</div>
</div>

{% endblock fos_user_content %}
